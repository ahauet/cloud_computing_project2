{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "Zip all files given by a directory",
  "Resources": {
    "Zipper": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "index.handler",
        "Runtime": "nodejs4.3",
        "CodeUri": ".",
        "Description": "Zip all files given by a directory",
        "MemorySize": 128,
        "Timeout": 54,
        "Role": "arn:aws:iam::828843326560:role/Lambda-role",
        "Events": {
          "BucketEvent1": {
            "Type": "S3",
            "Properties": {
              "Bucket": {
                "Ref": "Bucket1"
              },
              "Events": [
                "s3:ObjectCreated:*"
              ],
              "Filter": {
                "S3Key": {
                  "Rules": [
                    {
                      "Name": "prefix",
                      "Value": "processed/"
                    },
                    {
                      "Name": "suffix",
                      "Value": ".jpeg"
                    }
                  ]
                }
              }
            }
          },
          "BucketEvent2": {
            "Type": "S3",
            "Properties": {
              "Bucket": {
                "Ref": "Bucket1"
              },
              "Events": [
                "s3:ObjectCreated:*"
              ],
              "Filter": {
                "S3Key": {
                  "Rules": [
                    {
                      "Name": "prefix",
                      "Value": "processed/"
                    },
                    {
                      "Name": "suffix",
                      "Value": ".JPG"
                    }
                  ]
                }
              }
            }
          },
          "BucketEvent3": {
            "Type": "S3",
            "Properties": {
              "Bucket": {
                "Ref": "Bucket1"
              },
              "Events": [
                "s3:ObjectCreated:*"
              ],
              "Filter": {
                "S3Key": {
                  "Rules": [
                    {
                      "Name": "prefix",
                      "Value": "processed/"
                    },
                    {
                      "Name": "suffix",
                      "Value": ".png"
                    }
                  ]
                }
              }
            }
          },
          "BucketEvent4": {
            "Type": "S3",
            "Properties": {
              "Bucket": {
                "Ref": "Bucket1"
              },
              "Events": [
                "s3:ObjectCreated:*"
              ],
              "Filter": {
                "S3Key": {
                  "Rules": [
                    {
                      "Name": "prefix",
                      "Value": "processed/"
                    },
                    {
                      "Name": "suffix",
                      "Value": ".jpg"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "Bucket1": {
      "Type": "AWS::S3::Bucket"
    },
  }
}
